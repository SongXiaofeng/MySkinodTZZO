<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/recorder_background"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/navigation_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:background="#B0B0B0"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_background"
            android:button="@null"
            android:checked="true"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/conversion"
            android:textColor="@drawable/text_choose" />

        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_background"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/recorder"
            android:textColor="@drawable/text_choose" />

        <RadioButton
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_background"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@drawable/text_choose" />
    </RadioGroup>


    <android.support.v4.view.ViewPager
        android:id="@+id/myViewPager"
        android:layout_below="@+id/navigation_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <FrameLayout
        android:id="@+id/iv_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            android:layout_gravity="center"
            android:src="@mipmap/speakericon"
           />
    </FrameLayout>

</RelativeLayout>
